<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WrapContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleTextStyle" parent="WrapContentStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:text">@string/welcome_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleTextStyle" parent="WrapContentStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:text">@string/welcome_text</item>
        <item name="android:textColor">#434343</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SelectorCardStyle" parent="WrapContentStyle">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="cardCornerRadius">24dp</item>
    </style>

    <style name="SelectorTextStyle" parent="WrapContentStyle">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

</resources>